# Server
PORT=3000
NODE_ENV=development
TRUST_PROXY=false
BODY_LIMIT=1mb
SHUTDOWN_TIMEOUT_MS=30000
REQUEST_TIMEOUT_MS=30000

# CORS (comma-separated origins, or * for all)
CORS_ALLOWED_ORIGINS=*

# Open-Meteo (no API key needed for free tier)
OPEN_METEO_BASE_URL=https://api.open-meteo.com/v1
OPEN_METEO_AQ_BASE_URL=https://air-quality-api.open-meteo.com/v1
OPEN_METEO_GEO_BASE_URL=https://geocoding-api.open-meteo.com/v1

# Cache
CACHE_TTL_SECONDS=900

# Rate limiting (per window)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=60
RATE_LIMIT_STANDARD_MAX=120
RATE_LIMIT_PREMIUM_MAX=300

# Firebase Cloud Messaging (for push notifications - Phase 7)
# Download service account JSON from Firebase Console → Project Settings → Service accounts
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json

# Weather monitor job interval (milliseconds)
WEATHER_MONITOR_INTERVAL_MS=900000

# Alert scheduler
ALERT_COOLDOWN_MS=14400000
ALERT_CLEANUP_INTERVAL_MS=86400000
ALERT_HISTORY_RETENTION_DAYS=30

# Batch endpoint
BATCH_MAX_LOCATIONS=10
